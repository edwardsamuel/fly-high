@model FlyHigh.Models.Schedule

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Schedule</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.FlightId, "Flight")
        </div>
        <div class="editor-field">
            @Html.DropDownList("FlightId", String.Empty)
            @Html.ValidationMessageFor(model => model.FlightId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PlaneId, "Plane")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PlaneId", String.Empty)
            @Html.ValidationMessageFor(model => model.PlaneId)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
