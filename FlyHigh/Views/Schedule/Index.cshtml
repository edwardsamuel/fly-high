@model IEnumerable<FlyHigh.Models.Schedule>

@{
    ViewBag.Title = "Index";
}

<h2>Schedule</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Schedule",new { @class="btn btn-success btn-xs"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Flight.FlightId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Plane.PlaneType)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Flight.FlightId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Plane.PlaneType)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ScheduleId }, new {@class="btn btn-default btn-xs" })
            @Html.ActionLink("Details", "Details", new { id=item.ScheduleId }, new {@class="btn btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id=item.ScheduleId }, new {@class="btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
