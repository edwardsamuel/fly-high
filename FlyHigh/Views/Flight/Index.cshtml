@model IEnumerable<FlyHigh.Models.Flight>

@{
    ViewBag.Title = "Index";
}

<h2>Flight</h2>

<p>
    @Html.ActionLink("Create New Flight", "Create", "Flight",new { @class="btn btn-success btn-xs"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FromAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ToAirport)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departure)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BasePrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FromAirport.AirportCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToAirport.AirportCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departure)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BasePrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.FlightId }, new {@class="btn btn-default btn-xs" })
            @Html.ActionLink("Details", "Details", new { id = item.FlightId }, new {@class="btn btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id = item.FlightId }, new { @class="btn btn-danger btn-xs"})
        </td>
    </tr>
}

</table>
