@model FlyHigh.Models.Flight

@{
    ViewBag.Title = "Edit";
}

<h1>Flight</h1>

@using (Html.BeginForm("Edit", "Flight", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Edit Flight</legend>
        @Html.HiddenFor(model => model.FlightId)
        <div class="form-group">
            @Html.LabelFor(model => model.FromAirportId, "From", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("FromAirportId", null, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.FromAirportId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToAirportId, "To", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("ToAirportId", null, new { @class = "form-control input-sm" })
                @Html.ValidationMessageFor(model => model.ToAirportId)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Departure, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Departure, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Departure)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Duration, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Duration, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Duration)
                    <span class="input-group-addon">minute(s)</span>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BasePrice, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group">
                    <span class="input-group-addon">Rp</span>
                    @Html.TextBoxFor(model => model.BasePrice, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.BasePrice)
                    <span class="input-group-addon">.00</span>
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-success btn-sm" type="submit" value="Save">
                @Html.ActionLink("Back to List", "Index", "Flight", new { @class = "btn btn-default btn-sm" })
            </div>
        </div>
    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}