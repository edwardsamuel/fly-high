@model FlyHigh.Models.Baggage

@{
    ViewBag.Title = "AddBaggage";
}

<h1>Baggage</h1>

@using (Html.BeginForm("AddBaggage", "CheckIn", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.TicketId)
    <fieldset>
        <legend>Add Baggage</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.Weight, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <div class="input-group">
                    @Html.TextBoxFor(model => model.Weight, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Weight)
                    <span class="input-group-addon">kg</span>
                </div>
            </div>



        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-success btn-sm" type="submit" value="Submit">
            </div>
        </div>
    </fieldset>
} 