@{
    ViewBag.Title = "Index";
}

<h1>Check In</h1>

@using (Html.BeginForm("Index", "CheckIn", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Validation</legend>
        <div class="form-group">
            <label for="id" class="col-md-2 control-label">Booking Id</label>
            <div class="col-md-10">
                <input class="form-control input-sm" id="id" name="id" type="text" value="" placeholder="Enter Booking ID">
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="btn btn-primary btn-sm" type="submit" value="Next">
            </div>
        </div>
    </fieldset>
}


