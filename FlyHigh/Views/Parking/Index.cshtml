@{
    ViewBag.Title = "Index";
}

<h1>Parking</h1>

@using (Html.BeginForm("Details", "Parking", null, FormMethod.Get, new { role = "form", @class = "form-horizontal" }))
{
    <fieldset>
        <legend>Filter</legend>
        
        <div class="form-group">
            <label class="col-md-2 control-label" for="date">Start Date</label>
            <div class="col-md-4">
                <input class="form-control input-md" id="start" name="start" type="text" value="" placeholder="yyyy-mm-dd">
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 control-label" for="date">End Date</label>
            <div class="col-md-4">
                <input class="form-control input-md" id="end" name="end" type="text" value="" placeholder="yyyy-mm-dd">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input class="btn btn-primary btn-md" type="submit" value="Next" />
            </div>
        </div>
    </fieldset>
}
