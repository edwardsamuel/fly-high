@model IEnumerable<FlyHigh.Models.StewardSchedule>

@{
    ViewBag.Title = "Index";
}

<h2>Steward Schedule</h2>

<p>
    @Html.ActionLink("Create New", "Create", "StewardSchedule", new { @class="btn btn-success btn-xs"})
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Steward.StewardName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Schedule.ScheduleId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsHead)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Steward.StewardName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Schedule.ScheduleId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsHead)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StewardScheduleId }, new {@class="btn btn-default btn-xs" })
            @Html.ActionLink("Details", "Details", new { id=item.StewardScheduleId }, new {@class="btn btn-primary btn-xs" })
            @Html.ActionLink("Delete", "Delete", new { id=item.StewardScheduleId }, new {@class="btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
