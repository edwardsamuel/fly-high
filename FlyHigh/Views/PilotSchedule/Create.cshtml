@model FlyHigh.Models.PilotSchedule

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>PilotSchedule</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.ScheduleId, "Schedule")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ScheduleId", ViewBag.ScheduleId as SelectList, "Select...", new { onchange = "FetchPilots();" })
            @*@Html.ValidationMessageFor(model => model.ScheduleId)*@
        </div>

        <p data-bind="visible: pilots().length > 0">
            <b>Pilot</b>
            <select id="PilotId" name="PilotId" data-bind="options: pilots, optionsText: 'PilotName', optionsValue: 'PilotId', optionsCaption: 'Select...'"></select>
        </p>

        <div class="editor-label">
            @Html.LabelFor(model => model.IsHead)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.IsHead)
            @Html.ValidationMessageFor(model => model.IsHead)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/pilotschedule")
}
