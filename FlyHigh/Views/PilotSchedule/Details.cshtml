@model FlyHigh.Models.PilotSchedule

@{
    ViewBag.Title = "Details";
}

<h1>Pilot Schedule</h1>

<fieldset>
    <legend>Pilot Schedule Details</legend>
    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Pilot.PilotName)</strong>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Pilot.PilotName)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Schedule.ScheduleId)</strong>
        </div>
        <div class="col-md-10">
            @Html.ActionLink(Model.Schedule.ScheduleId.ToString(), "Details", "Schedule", new { id = Model.ScheduleId }, null)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Schedule.Flight.FlightId)</strong>
        </div>
        <div class="col-md-10">
            @Html.ActionLink(Model.Schedule.FlightId.ToString(), "Details", "Flight", new { id = Model.Schedule.FlightId }, null)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Schedule.Flight.FromAirport)</strong>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Schedule.Flight.FromAirport.AirportCode)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Schedule.Flight.ToAirport)</strong>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Schedule.Flight.ToAirport.AirportCode)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Schedule.DepartureTime)</strong>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Schedule.DepartureTime)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.Schedule.ArrivalTime)</strong>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.Schedule.ArrivalTime)
        </div>
    </div>

    <div class="row">
        <div class="col-md-2">
            <strong>@Html.DisplayNameFor(model => model.IsHead)</strong>
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.IsHead)
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            &nbsp;
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @Html.ActionLink("Edit", "Edit", new { id = Model.PilotScheduleId }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default btn-sm" })
        </div>
    </div>
</fieldset>